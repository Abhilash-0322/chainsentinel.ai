# Aptos Compliance Agent Environment Variables

# Aptos Network Configuration
APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com/v1
APTOS_NETWORK=testnet

# Groq Configuration (for AI analysis)
GROQ_API_KEY=your_groq_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Compliance Settings
MAX_TRANSACTION_VALUE=1000000000000  # 10,000 APT in octas
RISK_THRESHOLD_HIGH=70
RISK_THRESHOLD_CRITICAL=90

# Monitoring Settings
MONITOR_POLL_INTERVAL=5  # seconds
MAX_TRANSACTIONS_PER_QUERY=25
